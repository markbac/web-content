  <title>Download Ali's Contact Card</title>
  <script>
    // Auto-trigger the download on page load
    window.onload = () => {
      const a = document.createElement('a');
      a.href = '/ali.vcf';
      a.download = 'Ali.vcf'; // Force download name
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
    };
  </script>
</head>
